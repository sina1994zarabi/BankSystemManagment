	<div class = "loginform">
		<h1>Welcom To X Bank</h1>
		<h2>Login</h2>
		<form asp-action="Login" method = "post">
			<label asp-for="Username"></label>
			<input asp-for="Username" id="username" placeholder = "Enter your username" required>
			<span  asp-validation-for="Username" class = "text-danger">
			@if (TempData["ErrorMessage"] != null && TempData["ErrorMessage"].ToString().StartsWith('U'))
			{
				@TempData["ErrorMessage"]
			}
		</span>

			<label asp-for="Password"></label>
			<input asp-for="Password" type="password" id="password"  placeholder="Enter your password" required>
			<span asp-validation-for="Password" class="text-danger">
			@if (TempData["ErrorMessage"] != null && !TempData["ErrorMessage"].ToString().StartsWith('U'))
			{
				@TempData["ErrorMessage"]
			}
		</span>
			<button type="submit">Login</button>
		</form>
	</div>

<style>
