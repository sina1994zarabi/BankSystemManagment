@model IEnumerable<App.Domain.Core.Dtos.TransactionWithCardDto>;

@{
    ViewData["Title"] = "Transaction History";
}

<h2>Transaction History</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Source Card Number</th>
            <th>Destination Card Number</th>
            <th>Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionId</td>
                <td>@transaction.TransactionDate.ToString("MM/dd/yyyy")</td>
                <td>@transaction.SourceCardNumber</td>
                <td>@transaction.DestinationCardNumber</td>
                <td>@transaction.Amount.ToString("C")</td>
                <td>@transaction.IsSuccessful</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="UserPanel" asp-controller="User" class="btn btn-secondary">Back</a>

<style>
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }
    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
    }
    .table th {
        background-color: #f8f9fa;
    }
</style>
